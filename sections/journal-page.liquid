      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A place to pause, explore the latest in skincare, uncover expert advice and find delicious recipes.</p>"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Description Size",
      "default": 14
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#666666"
    },
    {
      "type": "text",
      "id": "filter_label",
      "label": "Filter Label",
      "default": "FILTER"
    },
    {
      "type": "text",
      "id": "back_to_top_text",
      "label": "Back to Top Text",
      "default": "BACK TO TOP"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#fafafa"
    },
    {
      "type": "range",
      "id": "top_padding",
      "min": 40,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "min": 40,
      "max": 120,
