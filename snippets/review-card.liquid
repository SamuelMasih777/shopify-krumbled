{% comment %}
  Review Card Snippet
  Usage: {% render 'review-card', 
    customer_name: block.settings.customer_name,
    review_text: block.settings.review_text,
    product_name: block.settings.product_name,
    product_icon: block.settings.product_icon,
    background_color: block.settings.background_color
  %}
{% endcomment %}


<div class="review-card" style="--bg-color: {{ background_color | default: '#f5f5f5' }}; --hover-bg-color: {{ hover_background_color | default: background_color | default: '#f5f5f5' }};">
  <div class="review-header">
    <h3 class="customer-name">{{ customer_name }}</h3>
  </div>
  
  <div class="review-content">
    <p class="review-text">{{ review_text }}</p>
  </div>
  
  <div class="review-footer">
    {% if product_icon %}
      <div class="product-icon">
        <img src="{{ product_icon | image_url: width: 40 }}" alt="{{ product_name }}">
      </div>
    {% endif %}
    <p class="product-name">{{ product_name }}</p>
  </div>
</div>

<style>
.review-card {
  padding: 30px;
  border-radius: 16px;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: background-color 0.3s ease;
  background-color: var(--bg-color);
}

.review-card:hover {
  background-color: var(--hover-bg-color);
}

.review-header {
  margin-bottom: 20px;
}

.customer-name {
  font-size: var(--customer-name-size, 18px);
  font-weight: var(--customer-name-weight, 600);
  color: #111;
  margin: 0;
  font-family: var(--customer-name-font-family, sans-serif);
}

.review-content {
  flex: 1;
  margin-bottom: 25px;
}

.review-text {
  font-size: var(--review-text-size, 14px);
  line-height: 1.7;
  color: #333;
  margin: 0;
  font-family: var(--review-text-font-family, sans-serif);
  font-weight: var(--review-text-weight, 400);
}

.review-footer {
  display: flex;
  align-items: center;
  gap: 12px;
  padding-top: 20px;
  border-top: 1px solid rgba(0, 0, 0, 0.08);
}

.product-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  overflow: hidden;
  flex-shrink: 0;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.product-name {
  font-size: var(--product-name-size, 11px);
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #666;
  margin: 0;
  font-weight: var(--product-name-weight, 600);
  font-family: var(--product-name-font-family, sans-serif);
}

@media (max-width: 768px) {
  .review-card {
    padding: 25px;
  }
}
</style>

