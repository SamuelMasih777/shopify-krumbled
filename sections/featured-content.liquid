{% schema %}
{
  "name": "Featured Content",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section Padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "content_item",
      "name": "Content Item",
      "settings": [
        {
          "type": "select",
          "id": "layout",
          "label": "Layout",
          "options": [
            {
              "value": "image_left",
              "label": "Image Left, Text Right"
            },
            {
              "value": "image_right",
              "label": "Image Right, Text Left"
            }
          ],
          "default": "image_left"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "top_label",
          "label": "Top Label",
          "default": "LABEL"
        },
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading",
          "default": "Meet the Founder"
        },
        {
          "type": "font_picker",
          "id": "heading_font",
          "label": "Heading Font",
          "default": "serif"
        },
        {
          "type": "range",
          "id": "heading_size",
          "min": 24,
          "max": 60,
          "step": 2,
          "unit": "px",
          "label": "Heading Size",
          "default": 48
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Add your content here</p>"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "content_padding",
          "min": 0,
          "max": 100,
          "step": 10,
          "unit": "px",
          "label": "Content Padding",
          "default": 0
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Content",
      "blocks": [
        {
          "type": "content_item",
          "settings": {
            "layout": "image_left",
            "top_label": "MEET THE FOUNDER",
            "heading": "Keira Rumble"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
{{ section.settings | json | json }}

.featured-content {
  padding: {{ section.settings.section_padding }}px 40px;
}

.featured-content-item {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
  margin-bottom: 80px;
}

.featured-content-item:last-child {
  margin-bottom: 0;
}

/* Image on left, text on right (default) */
.featured-content-item.image_left .item-image {
  order: 0;
}

.featured-content-item.image_left .item-text {
  order: 1;
}

/* Image on right, text on left */
.featured-content-item.image_right .item-image {
  order: 1;
}

.featured-content-item.image_right .item-text {
  order: 0;
}

.item-image {
  position: relative;
  overflow: hidden;
  border-radius: 8px;
  min-height: 500px;
}

.item-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.item-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40px;
  padding-top: calc(40px + {{ block.settings.content_padding }}px);
  padding-bottom: calc(40px + {{ block.settings.content_padding }}px);
  padding-left: calc(40px + {{ block.settings.content_padding }}px);
  padding-right: calc(40px + {{ block.settings.content_padding }}px);
}

.item-top-label {
  font-size: 10px;
  letter-spacing: 2px;
  text-transform: uppercase;
  font-weight: 700;
  color: #666;
  margin-bottom: 15px;
}

.item-heading {
  font-size: 48px;
  font-weight: 400;
  color: #333;
  line-height: 1.2;
  margin-bottom: 25px;
}

.item-description {
  font-size: 15px;
  line-height: 1.8;
  color: #666;
  margin-bottom: 30px;
}

.item-description p {
  margin-bottom: 15px;
}

.item-description p:last-child {
  margin-bottom: 0;
}

.item-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 0;
  background: none;
  border: none;
  text-decoration: none;
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: {{ block.settings.button_color }};
  cursor: pointer;
  transition: all 0.3s ease;
  width: fit-content;
}

.item-button:hover {
  gap: 12px;
}

.item-button::after {
  content: 'â†’';
  display: inline-block;
  transition: transform 0.3s ease;
}

@media (max-width: 1024px) {
  .featured-content {
    padding: 50px 30px;
  }

  .featured-content-item {
    gap: 40px;
    margin-bottom: 60px;
  }

  .item-image {
    min-height: 400px;
  }

  .item-text {
    padding: 30px;
    padding-top: calc(30px + {{ block.settings.content_padding | times: 0.8 | round }}px);
    padding-bottom: calc(30px + {{ block.settings.content_padding | times: 0.8 | round }}px);
    padding-left: calc(30px + {{ block.settings.content_padding | times: 0.8 | round }}px);
    padding-right: calc(30px + {{ block.settings.content_padding | times: 0.8 | round }}px);
  }

  .item-heading {
    font-size: 36px;
  }
}

@media (max-width: 768px) {
  .featured-content {
    padding: 40px 20px;
  }

  .featured-content-item {
    grid-template-columns: 1fr;
    gap: 20px;
    margin-bottom: 40px;
  }

  .item-image {
    min-height: 300px;
  }

  .item-text {
    padding: 25px;
    padding-top: calc(25px + {{ block.settings.content_padding | times: 0.6 | round }}px);
    padding-bottom: calc(25px + {{ block.settings.content_padding | times: 0.6 | round }}px);
    padding-left: calc(25px + {{ block.settings.content_padding | times: 0.6 | round }}px);
    padding-right: calc(25px + {{ block.settings.content_padding | times: 0.6 | round }}px);
  }

  .item-heading {
    font-size: 28px;
  }

  .item-description {
    font-size: 14px;
  }
}
</style>

<section class="featured-content">
  {% for block in section.blocks %}
    <div class="featured-content-item {{ block.settings.layout }}" {{ block.shopify_attributes }}>
      <div class="item-image">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url: width: 1000 }}" alt="{{ block.settings.heading }}">
        {% else %}
          <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%); display: flex; align-items: center; justify-content: center; color: #999; font-size: 14px;">
            <span>Add Image</span>
          </div>
        {% endif %}
      </div>

      <div class="item-text">
        {% if block.settings.top_label != blank %}
          <span class="item-top-label">{{ block.settings.top_label }}</span>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h2 class="item-heading" style="font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }}; font-size: {{ block.settings.heading_size }}px;">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="item-description">
            {{ block.settings.description }}
          </div>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <a href="{{ block.settings.button_url }}" class="item-button">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</section>
