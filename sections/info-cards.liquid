{% endschema %}

<style>
.info-cards-section {
  padding: {{ section.settings.section_padding }}px 40px;
  background-color: #ffffff;
}

.info-cards-wrapper {
  max-width: 1400px;
  margin: 0 auto;
}

.info-cards-heading {
  font-family: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
  font-size: {{ section.settings.heading_size }}px;
  font-weight: 400;
  color: {{ section.settings.heading_color }};
  margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
  line-height: 1.2;
  letter-spacing: -0.5px;
}

.info-cards-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: {{ section.settings.card_gap }}px;
}

.info-card {
  background-color: {{ section.settings.card_bg_color }};
  padding: {{ section.settings.card_padding }}px;
  border-radius: {{ section.settings.card_border_radius }}px;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  height: 100%;
}

.info-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.08);
}

.info-card-title {
  font-family: {{ section.settings.card_title_font.family }}, {{ section.settings.card_title_font.fallback_families }};
  font-size: {{ section.settings.card_title_size }}px;
  font-weight: 700;
  color: {{ section.settings.card_title_color }};
  margin: 0 0 16px 0;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  line-height: 1.3;
}

.info-card-content {
  font-family: {{ section.settings.card_content_font.family }}, {{ section.settings.card_content_font.fallback_families }};
  font-size: {{ section.settings.card_content_size }}px;
  color: {{ section.settings.card_content_color }};
  margin: 0;
  line-height: {{ section.settings.card_line_height }};
  flex-grow: 1;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .info-cards-section {
    padding: {{ section.settings.section_padding | minus: 20 }}px 30px;
  }

  .info-cards-heading {
    font-size: clamp(32px, 6vw, {{ section.settings.heading_size }}px);
    margin-bottom: {{ section.settings.heading_margin_bottom | minus: 10 }}px;
  }

  .info-cards-grid {
    gap: {{ section.settings.card_gap | minus: 10 }}px;
  }

  .info-card {
    padding: {{ section.settings.card_padding | minus: 10 }}px;
  }
}

@media (max-width: 768px) {
  .info-cards-section {
    padding: {{ section.settings.section_padding | minus: 30 }}px 20px;
  }

  .info-cards-heading {
    font-size: clamp(28px, 7vw, 42px);
    margin-bottom: {{ section.settings.heading_margin_bottom | minus: 15 }}px;
  }

  .info-cards-grid {
    grid-template-columns: 1fr;
    gap: {{ section.settings.card_gap | minus: 5 }}px;
  }

  .info-card {
    padding: {{ section.settings.card_padding | minus: 15 }}px;
  }

  .info-card-title {
    font-size: {{ section.settings.card_title_size | minus: 2 }}px;
  }

  .info-card-content {
    font-size: {{ section.settings.card_content_size | minus: 1 }}px;
  }
}

@media (max-width: 480px) {
  .info-cards-section {
    padding: 30px 15px;
  }

  .info-cards-heading {
    font-size: 24px;
    margin-bottom: 30px;
  }

  .info-cards-grid {
    gap: 15px;
  }

  .info-card {
    padding: 25px;
  }

  .info-card-title {
    font-size: 16px;
    margin-bottom: 12px;
  }

  .info-card-content {
    font-size: 13px;
    line-height: 1.6;
  }
}

/* Animation */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.info-card {
  animation: fadeInUp 0.6s ease-out forwards;
}

.info-card:nth-child(1) {
  animation-delay: 0.1s;
}

.info-card:nth-child(2) {
  animation-delay: 0.2s;
}

.info-card:nth-child(3) {
  animation-delay: 0.3s;
}

.info-card:nth-child(n+4) {
  animation-delay: calc(0.1s * (var(--card-index, 0) - 3));
}
</style>

<section class="info-cards-section">
  <div class="info-cards-wrapper">
    {% if section.settings.section_heading %}
      <h2 class="info-cards-heading">{{ section.settings.section_heading }}</h2>
    {% endif %}

    <div class="info-cards-grid">
      {% for block in section.blocks %}
        {% if block.type == 'info_card' %}
          <div class="info-card" {{ block.shopify_attributes }} style="--card-index: {{ forloop.index }};">
            {% if block.settings.card_title %}
              <h3 class="info-card-title">{{ block.settings.card_title }}</h3>
            {% endif %}

            {% if block.settings.card_content %}
              <p class="info-card-content">{{ block.settings.card_content }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Smooth reveal animation for cards on scroll
  const cards = document.querySelectorAll('.info-card');
  
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver(function(entries) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  cards.forEach(card => {
    observer.observe(card);
  });
});
</script>
