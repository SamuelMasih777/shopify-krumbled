<style>
  .krumbled-product-section {
    background-color: #ffffff;
    padding: 60px 20px;
    font-family: sans-serif;
    color: #111111;
  }

  .kp-container {
    max-width: 1300px;
    margin: 0 auto;
  }

  .kp-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .kp-gallery {
    display: flex;
    gap: 20px;
  }
  .kp-thumbnails {
    display: flex;
    flex-direction: column;
    gap: 15px;
    width: 80px;
    flex-shrink: 0;
  }
  .kp-thumb {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 8px;
    cursor: pointer;
    overflow: hidden;
    border: 2px solid transparent;
  }
  .kp-thumb.active {
    border-color: #e9427c;
  }
  .kp-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .kp-main-image {
    flex-grow: 1;
    border-radius: 12px;
    overflow: hidden;
    background: #f9f9f9;
  }
  .kp-main-image img {
    width: 100%;
    display: block;
  }

  .kp-info {
    position: sticky;
    top: 40px;
  }
  
  .kp-title {
    font-family: serif;
    font-weight: 400;
    font-size: 48px;
    line-height: 1.1;
    margin-bottom: 15px;
  }

  .kp-price {
    font-size: 24px;
    font-weight: 600;
    color: #111;
  }
  
  .kp-add-to-cart {
    flex-grow: 1;
    background: #e9427c;
    color: #fff;
    border: none;
    height: 50px;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 700;
    width: 100%;
    cursor: pointer;
    text-transform: uppercase;
    margin-top: 20px;
  }
</style>

<div class="krumbled-product-section">
  <div class="kp-container">
    <div class="kp-grid">
      <!-- Left: Gallery -->
      <div class="kp-gallery">
        <div class="kp-thumbnails">
          {% for media in product.media %}
            <div class="kp-thumb {% if forloop.first %}active{% endif %}" onclick="document.getElementById('mainImage').src='{{ media.preview_image | image_url: width: 1000 }}'">
              <img src="{{ media.preview_image | image_url: width: 150 }}" alt="{{ media.alt }}">
            </div>
          {% endfor %}
        </div>
        <div class="kp-main-image">
          <img id="mainImage" src="{{ product.featured_image | image_url: width: 1000 }}" alt="{{ product.title }}">
        </div>
      </div>

      <!-- Right: Info -->
      <div class="kp-info">
        <span style="font-size: 13px; font-weight: 600; letter-spacing: 2px; color: #666; display: block; margin-bottom: 15px;">KRUMBLED FOODS</span>
        
        <h1 class="kp-title">{{ product.title }}</h1>

        <div style="margin-bottom: 25px; color: #f4b619;">★★★★★ <span style="color: #666; font-size: 14px;">(148 Reviews)</span></div>

        <div style="line-height: 1.6; color: #444; margin-bottom: 30px;">
          {{ product.description | strip_html | truncatewords: 30 }}
        </div>

        <div style="display: flex; gap: 15px; align-items: center;">
          <span class="kp-price">{{ product.price | money }}</span>
        </div>

        {% form 'product', product %}
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          <button type="submit" class="kp-add-to-cart">Add to Cart</button>
        {% endform %}

        <style>
            .kp-collapsibles {
                margin-top: 40px;
                border-top: 1px solid #e5e5e5;
            }
            .kp-collapsible-item {
                border-bottom: 1px solid #e5e5e5;
            }
            .kp-collapsible-btn {
                width: 100%;
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 20px 0;
                background: none;
                border: none;
                cursor: pointer;
                text-align: left;
                font-family: inherit;
            }
            .kp-collapsible-title {
                font-size: 14px;
                font-weight: 700;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: {{ section.settings.collapsible_text_color | default: '#000' }};
                transition: color 0.3s ease;
            }
            .kp-collapsible-btn[aria-expanded="true"] .kp-collapsible-title {
                color: {{ section.settings.collapsible_active_color | default: '#e9427c' }};
            }
            .kp-collapsible-icon {
                position: relative;
                width: 12px;
                height: 12px;
            }
            .kp-collapsible-icon::before,
            .kp-collapsible-icon::after {
                content: '';
                position: absolute;
                background-color: currentColor;
                transition: transform 0.3s ease;
            }
            .kp-collapsible-icon::before {
                width: 100%;
                height: 2px;
                top: 50%;
                left: 0;
                transform: translateY(-50%);
            }
            .kp-collapsible-icon::after {
                width: 2px;
                height: 100%;
                top: 0;
                left: 50%;
                transform: translateX(-50%);
            }
            .kp-collapsible-btn[aria-expanded="true"] .kp-collapsible-icon::after {
                transform: translateX(-50%) rotate(90deg);
            }
            .kp-collapsible-btn[aria-expanded="true"] .kp-collapsible-icon {
                 transform: rotate(45deg);
            }

            .kp-collapsible-content {
                max-height: 0;
                overflow: hidden;
                transition: max-height 0.3s ease-out;
            }
            .kp-collapsible-inner {
                padding-bottom: 25px;
                color: #444;
                font-size: 15px;
                line-height: 1.6;
            }
            .kp-collapsible-inner strong {
                color: #000;
                font-weight: 700;
            }
        </style>

        <div class="kp-collapsibles">
            {% for block in section.blocks %}
                {% if block.type == 'collapsible_tab' %}
                    <div class="kp-collapsible-item">
                        <button class="kp-collapsible-btn" aria-expanded="false" onclick="toggleCollapsible(this)">
                            <span class="kp-collapsible-title">{{ block.settings.heading }}</span>
                            <span class="kp-collapsible-icon"></span>
                        </button>
                        <div class="kp-collapsible-content">
                            <div class="kp-collapsible-inner">
                                {{ block.settings.content }}
                                {{ block.settings.page.content }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <script>
            function toggleCollapsible(btn) {
                const isExpanded = btn.getAttribute('aria-expanded') === 'true';
                btn.setAttribute('aria-expanded', !isExpanded);
                const content = btn.nextElementSibling;
                
                if (!isExpanded) {
                    content.style.maxHeight = content.scrollHeight + "px";
                } else {
                    content.style.maxHeight = null;
                }
            }
        </script>
      </div>
    </div>
  </div>
</div>
