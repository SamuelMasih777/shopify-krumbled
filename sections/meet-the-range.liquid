{% schema %}
{
  "name": "Meet the Range",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Meet the range"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Heading Font",
      "default": "serif"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 24,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading Size",
      "default": 42
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "top_padding",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Top Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Name"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Meet the Range",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Beauty Bites"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Collagen Peptides"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "All Products"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
{{ section.settings.heading_font | font_face }}

.meet-range-section {
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.top_padding }}px 0 {{ section.settings.bottom_padding }}px;
}

.meet-range-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 40px;
}

.meet-range-heading {
  font-size: {{ section.settings.heading_size }}px;
  font-family: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
  font-weight: 400;
  text-align: center;
  margin-bottom: 50px;
  color: #111;
  line-height: 1.2;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
}

@media (max-width: 1024px) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
}

@media (max-width: 768px) {
  .meet-range-container {
    padding: 0 20px;
  }
  
  .meet-range-heading {
    font-size: clamp(28px, 6vw, {{ section.settings.heading_size }}px);
    margin-bottom: 30px;
  }
  
  .category-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
}
</style>

<section class="meet-range-section">
  <div class="meet-range-container">
    {% if section.settings.heading != blank %}
      <h2 class="meet-range-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="category-grid">
        {% for block in section.blocks %}
          <div {{ block.shopify_attributes }}>
            {% render 'category-card',
              image: block.settings.image,
              title: block.settings.title,
              url: block.settings.url
            %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p style="text-align: center; color: #999;">Add category cards in the theme editor</p>
    {% endif %}
  </div>
</section>
