<style>
:root {
  --it-bg: #f6dfd8;
  --it-line: #6e4740;
  --it-text: #4a352f;
  --it-padding-y: 12px;
  --it-font-size: 12px;
  --it-letter-spacing: 3px;
}

.info-tabs {
  background: var(--it-bg);
  border-top: 1px solid var(--it-line);
  border-bottom: 1px solid var(--it-line);
  width: 100%;
  box-sizing: border-box;
}

.info-tabs__inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--it-padding-y) 20px;
}

.info-tabs__nav {
  display: flex;
  justify-content: center;
  align-items: center;
}

.info-tabs__list {
  list-style: none;
  display: flex;
  gap: 48px;
  margin: 0;
  padding: 0;
  align-items: center;
  justify-content: center;
}

.info-tabs__item {
  margin: 0;
}

.info-tabs__link {
  display: inline-block;
  text-decoration: none;
  color: var(--it-text);
  font-size: var(--it-font-size);
  font-weight: 600;
  letter-spacing: var(--it-letter-spacing);
  text-transform: uppercase;
  padding: 6px 2px;
  transition: opacity .15s ease, transform .08s ease;
}

.info-tabs__link:hover,
.info-tabs__link:focus {
  opacity: .85;
  transform: translateY(-1px);
}

.info-tabs__link.is-active {
  position: relative;
}

.info-tabs__link.is-active::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: -12px;
  transform: translateX(-50%);
  height: 2px;
  width: 36px;
  background: var(--it-line);
  border-radius: 2px;
}

/* mobile */
@media (max-width: 640px) {
  :root {
    --it-font-size: 11px;
    --it-letter-spacing: 2px;
  }
  .info-tabs__list {
    gap: 18px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }
  .info-tabs__list::-webkit-scrollbar { display: none; }
  .info-tabs__inner { padding: 12px; }
}
</style>

<section id="info-tabs-{{ section.id }}" class="info-tabs">
  <div class="info-tabs__inner">
    <nav class="info-tabs__nav">
      <ul class="info-tabs__list">
        <li class="info-tabs__item">
          <a href="{{ section.settings.link_1 | default: '#ingredients' }}" class="info-tabs__link">{{ section.settings.label_1 }}</a>
        </li>
        <li class="info-tabs__item">
          <a href="{{ section.settings.link_2 | default: '#benefits' }}" class="info-tabs__link">{{ section.settings.label_2 }}</a>
        </li>
        <li class="info-tabs__item">
          <a href="{{ section.settings.link_3 | default: '#reviews' }}" class="info-tabs__link">{{ section.settings.label_3 }}</a>
        </li>
      </ul>
    </nav>
  </div>
</section>

<script>
document.addEventListener("DOMContentLoaded", function () {
  var root = document.querySelector('[id^="info-tabs-"]');
  if (!root) return;

  var links = root.querySelectorAll('.info-tabs__link');
  if (!links.length) return;

  function clearActive() {
    links.forEach(a => a.classList.remove('is-active'));
  }

  function setActiveFromHash() {
    var hash = window.location.hash;
    if (!hash) return false;
    var match = Array.from(links).find(a => a.getAttribute('href') === hash);
    if (!match) return false;
    clearActive();
    match.classList.add('is-active');
    return true;
  }

  if (!setActiveFromHash()) {
    clearActive();
    links[0].classList.add('is-active');
  }

  window.addEventListener("hashchange", setActiveFromHash);

  links.forEach(a => {
    a.addEventListener("click", () => {
      clearActive();
      a.classList.add("is-active");
    });
  });
});
</script>

{% schema %}
{
  "name": "Info tabs",
  "settings": [
    { "type": "text", "id": "label_1", "default": "INGREDIENTS", "label": "Label 1" },
    { "type": "url",  "id": "link_1",  "default": "", "label": "Link 1" },

    { "type": "text", "id": "label_2", "default": "BENEFITS", "label": "Label 2" },
    { "type": "url",  "id": "link_2",  "default": "", "label": "Link 2" },

    { "type": "text", "id": "label_3", "default": "REVIEWS", "label": "Label 3" },
    { "type": "url",  "id": "link_3",  "default": "", "label": "Link 3" }
  ],
  "presets": [
    { "name": "Info tabs" }
  ]
}
{% endschema %}
