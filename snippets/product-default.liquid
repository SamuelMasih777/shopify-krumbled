<div style="padding: 40px; text-align: center;">
  <h1>{{ product.title }}</h1>
  <img src="{{ product.featured_image | image_url: width: 600 }}" style="max-width: 100%;">
  <p>{{ product.price | money }}</p>
  {% form 'product', product %}
     <button type="submit" style="padding: 10px 20px; background: #000; color: #fff;">Add to Cart</button>
  {% endform %}
</div>
