      "type": "header",
      "content": "Card Content Settings"
    },
    {
      "type": "font_picker",
      "id": "card_content_font",
      "label": "Card Content Font",
      "default": "sans-serif"
    },
    {
      "type": "range",
      "id": "card_content_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Card Content Size",
      "default": 14
    },
    {
      "type": "color",
      "id": "card_content_color",
      "label": "Card Content Color",
      "default": "#555555"
    },
    {
      "type": "range",
