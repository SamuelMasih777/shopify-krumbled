{% schema %}
{
  "name": "Journal Section",
  "settings": [
    {
      "type": "header",
      "content": "Left Content"
    },
    {
      "type": "text",
      "id": "top_label",
      "label": "Top Label",
      "default": "EXPLORE OUR"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Journal"
    },
    {
      "type": "font_picker",
      "id": "heading_font",
      "label": "Heading Font",
      "default": "serif"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Heading Size",
      "default": 56
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#111111"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>The perfect online resource for anyone interested in beauty and inner health. From recipes to health tips and beyond. Dive into the world of healthy living.</p>"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Description Size",
      "default": 14
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#666666"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "READ THE JOURNAL"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background",
      "default": "#f5e5d8"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#111111"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "top_padding",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Top Padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "category_link",
      "name": "Category Link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Category Label",
          "default": "CATEGORY"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Category URL"
        }
      ]
    },
    {
      "type": "journal_article",
      "name": "Article Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Article Image"
        },
        {
          "type": "text",
          "id": "category",
          "label": "Category Label",
          "default": "RECIPES",
          "info": "Small label below image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Article Title",
          "default": "Article Title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Article URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Journal Section",
