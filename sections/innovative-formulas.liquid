{%- liquid
  assign main_heading = section.settings.main_heading
  assign subheading = section.settings.subheading
  assign description = section.settings.description
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
-%}

<style>
  .formulas-wrapper {
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_bg_color }};
  }

  .formulas-container {
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    gap: 80px;
    max-width: 1500px;
    margin: 0 auto;
    align-items: center;
  }

  .left-content {
    animation: fadeInLeft 0.8s ease-out;
  }

  .main-heading {
    font-size: {{ section.settings.main_heading_size }}px;
    font-weight: {{ section.settings.main_heading_weight }};
    color: {{ section.settings.main_heading_color }};
    margin-bottom: 32px;
    line-height: 1.2;
    font-family: {{ section.settings.main_heading_font }};
    letter-spacing: {{ section.settings.main_heading_letter_spacing }}px;
  }

  .subheading {
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: {{ section.settings.subheading_weight }};
    color: {{ section.settings.subheading_color }};
    text-transform: uppercase;
    letter-spacing: {{ section.settings.subheading_letter_spacing }}px;
    margin-bottom: 20px;
  }

  .description {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: {{ section.settings.description_line_height }};
    margin-bottom: 32px;
    font-family: {{ section.settings.description_font }};
  }

  .carousel-dots {
    display: flex;
    gap: 8px;
    margin-bottom: 24px;
    align-items: center;
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_inactive_color }};
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    padding: 0;
  }

  .dot.active {
    background-color: {{ section.settings.dot_active_color }};
    width: 24px;
    border-radius: 4px;
  }

  .shop-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
    text-transform: uppercase;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: {{ section.settings.button_border_radius }}px;
  }

  .shop-button:hover {
    background-color: {{ section.settings.button_hover_color }};
    transform: translateX(4px);
  }

  .shop-button svg {
    width: 16px;
    height: 16px;
    stroke-width: 2;
  }

  .right-carousel-section {
    display: flex;
    flex-direction: column;
    gap: 20px;
    animation: fadeInRight 0.8s ease-out;
  }

  .carousel-pair {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .carousel-slide {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 4;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .carousel-slide.active img {
    animation: zoomIn 0.4s ease-out;
  }

  .slide-label {
    position: absolute;
    bottom: {{ section.settings.label_bottom }}px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, {{ section.settings.label_bg_opacity | divided_by: 100.0 }});
    color: {{ section.settings.label_text_color }};
    padding: {{ section.settings.label_padding }}px {{ section.settings.label_padding_x }}px;
    font-size: {{ section.settings.label_font_size }}px;
    font-weight: {{ section.settings.label_font_weight }};
    letter-spacing: {{ section.settings.label_letter_spacing }}px;
    text-transform: uppercase;
    border-radius: {{ section.settings.label_border_radius }}px;
    font-style: {{ section.settings.label_font_style }};
    z-index: 2;
    animation: labelFadeIn 0.5s ease-out;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes zoomIn {
    from {
      transform: scale(0.98);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes labelFadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 1200px) {
    .formulas-container {
      gap: 60px;
    }

    .main-heading {
      font-size: clamp(28px, 5vw, {{ section.settings.main_heading_size }}px);
    }
  }

  @media (max-width: 1024px) {
    .formulas-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .carousel-pair {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 768px) {
    .formulas-wrapper {
      padding: {{ section.settings.section_padding_top | divided_by: 1.5 | round }}px {{ section.settings.section_padding_horizontal | divided_by: 1.5 | round }}px {{ section.settings.section_padding_bottom | divided_by: 1.5 | round }}px;
    }

    .formulas-container {
      gap: 30px;
    }

    .main-heading {
      font-size: clamp(24px, 6vw, 36px);
      margin-bottom: 20px;
    }

    .subheading {
      font-size: 12px;
      margin-bottom: 16px;
    }

    .description {
      font-size: 13px;
      margin-bottom: 24px;
      line-height: 1.5;
    }

    .shop-button {
      font-size: 12px;
      padding: 12px 18px;
    }

    .carousel-pair {
      gap: 16px;
    }

    .carousel-slide {
      aspect-ratio: 4 / 5;
    }

    .slide-label {
      font-size: 12px;
      padding: 8px 12px;
    }
  }

  @media (max-width: 480px) {
    .formulas-wrapper {
      padding: 40px 20px;
    }

    .formulas-container {
      gap: 20px;
    }

    .main-heading {
      font-size: 24px;
    }

    .carousel-pair {
      grid-template-columns: 1fr;
    }

    .carousel-slide {
      aspect-ratio: 1 / 1;
    }
  }
</style>

<div class="formulas-wrapper">
  <div class="formulas-container">
    <div class="left-content">
      <h2 class="main-heading">{{ main_heading }}</h2>
      
      {%- if subheading != blank -%}
        <div class="subheading">{{ subheading }}</div>
      {%- endif -%}

      {%- if description != blank -%}
        <div class="description">{{ description }}</div>
      {%- endif -%}

      {%- assign carousel_items = section.blocks | where: 'type', 'carousel_item' -%}
      {%- if carousel_items.size > 1 -%}
        <div class="carousel-dots">
          {%- assign carousel_size = carousel_items.size -%}
          {%- for i in (0..carousel_size) -%}
            {%- if i < carousel_size -%}
              <button 
                class="dot {%- if i == 0 %} active{%- endif -%}" 
                data-slide="{{ i }}"
                aria-label="Go to slide {{ i | plus: 1 }}"
              ></button>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- if button_text != blank and button_link != blank -%}
        <a href="{{ button_link }}" class="shop-button">
          {{ button_text }}
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <polyline points="5 12 19 12"></polyline>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      {%- endif -%}
    </div>

    <div class="right-carousel-section">
      {%- assign carousel_items = section.blocks | where: 'type', 'carousel_item' -%}
      {%- for item in carousel_items -%}
        <div class="carousel-pair carousel-slide-set" data-slide-index="{{ forloop.index0 }}" {%- unless forloop.first %} style="display: none;"{% endunless %}>
          <div class="carousel-slide active">
            {%- if item.settings.before_image -%}
              <img 
                src="{{ item.settings.before_image | image_url: width: 600 }}" 
                alt="Before - {{ item.settings.carousel_title }}"
                loading="lazy"
                width="400"
                height="550"
              />
            {%- else -%}
              <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%); color: #999;">
                Before Image
              </div>
            {%- endif -%}
            <span class="slide-label">Before</span>
          </div>

          <div class="carousel-slide active">
            {%- if item.settings.after_image -%}
              <img 
                src="{{ item.settings.after_image | image_url: width: 600 }}" 
                alt="After - {{ item.settings.carousel_title }}"
                loading="lazy"
                width="400"
                height="550"
              />
            {%- else -%}
              <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #e8e8e8 0%, #f5f5f5 100%); color: #999;">
                After Image
              </div>
            {%- endif -%}
            <span class="slide-label">After</span>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const dots = document.querySelectorAll('.dot');
    const slideSets = document.querySelectorAll('.carousel-slide-set');
    let currentSlide = 0;

    function showSlide(index) {
      slideSets.forEach(set => set.style.display = 'none');
      dots.forEach(dot => dot.classList.remove('active'));

      if (slideSets[index]) {
        slideSets[index].style.display = 'grid';
      }
      if (dots[index]) {
        dots[index].classList.add('active');
      }
      currentSlide = index;
    }

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
      });
    });

    // Auto-rotate carousel every 5 seconds
    {%- if section.settings.enable_autoplay -%}
      setInterval(() => {
        currentSlide = (currentSlide + 1) % slideSets.length;
        showSlide(currentSlide);
      }, {{ section.settings.autoplay_speed }});
    {%- endif -%}
  });
</script>

