<style>
.advanced-product-section {
  padding: 40px;
  background-color: #faf5f0;
}

.advanced-product-wrapper {
  max-width: 1400px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: flex-start;
}

/* LEFT SIDE - IMAGES */
.product-images-side {
  position: sticky;
  top: 100px;
}

.product-main-image-container {
  width: 100%;
  height: 600px;
  border-radius: 8px;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-main-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.product-thumbnails {
  display: flex;
  flex-direction: column;
  gap: 12px;
  overflow-y: auto;
  max-height: 640px;
  padding-right: 8px;
}

.product-thumbnail {
  width: 100px;
  height: 100px;
  border-radius: 8px;
  overflow: hidden;
  cursor: pointer;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  background-color: #fff;
  flex-shrink: 0;
}

.product-thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.product-thumbnail.active {
  border-color: #333;
}

/* RIGHT SIDE - CONTENT */
.product-content-side {
  padding: 20px 0;
}

.product-type {
  font-size: 11px;
  letter-spacing: 2px;
  text-transform: uppercase;
  font-weight: 700;
  color: #999;
  margin-bottom: 12px;
}

.product-title {
  font-family: serif;
  font-size: 42px;
  font-weight: 400;
  color: #1a1a1a;
  margin: 0 0 16px 0;
  line-height: 1.1;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 20px;
}

.product-star {
  color: #ffc107;
}

.product-price-current {
  font-size: 18px;
  font-weight: 600;
  color: #e07835;
}

.product-add-to-cart {
  width: 100%;
  padding: 14px;
  background-color: #e07835;
  color: #ffffff;
  border: none;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 1px;
  text-transform: uppercase;
  cursor: pointer;
  margin-bottom: 20px;
}
</style>

<div class="advanced-product-section">
    <div class="advanced-product-wrapper">
      <!-- LEFT SIDE - IMAGES -->
      <div class="product-images-side">
        <div class="product-main-image-container">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.title }}" id="mainImage" class="product-main-image">
          {% else %}
            <div style="width: 100%; height: 100%; background: #f5f5f5; display: flex; align-items: center; justify-content: center;">
              <span style="color: #999;">No Image</span>
            </div>
          {% endif %}
        </div>

        {% if product.images.size > 1 %}
          <div class="product-thumbnails">
            {% for image in product.images %}
              <div class="product-thumbnail {% if forloop.first %}active{% endif %}" onclick="document.getElementById('mainImage').src='{{ image | image_url: width: 800 }}'">
                <img src="{{ image | image_url: width: 200 }}" alt="{{ product.title }}">
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- RIGHT SIDE - CONTENT -->
      <div class="product-content-side">
        <div class="product-type">MINI + ME</div>

        <h1 class="product-title">{{ product.title }}</h1>

        <div class="product-rating">
            <span class="product-star">★★★★★</span>
        </div>

        <div class="product-pricing" style="margin-bottom: 20px;">
             <span class="product-price-current">{{ product.price | money }}</span>
        </div>
        
        <div class="product-description" style="margin-bottom: 30px;">
            {{ product.description }}
        </div>

        {% form 'product', product %}
           <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
           <button type="submit" class="product-add-to-cart">Add to Cart</button>
        {% endform %}

        <style>
            .mini-collapsibles {
                margin-top: 30px;
                border-top: 1px solid #eee;
            }
            .mini-collapsible-item {
                border-bottom: 1px solid #eee;
            }
            .mini-collapsible-btn {
                width: 100%;
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 18px 0;
                background: none;
                border: none;
                cursor: pointer;
                text-align: left;
                font-family: inherit;
            }
            .mini-collapsible-title {
                font-size: 13px;
                font-weight: 700;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: #333;
                transition: color 0.3s ease;
            }
            .mini-collapsible-btn[aria-expanded="true"] .mini-collapsible-title {
                color: #e07835; /* Mini Me orange accent */
            }
            .mini-collapsible-icon {
                font-size: 18px;
                line-height: 1;
                color: #999;
                transition: transform 0.3s ease;
            }
            .mini-collapsible-btn[aria-expanded="true"] .mini-collapsible-icon {
                transform: rotate(45deg);
                color: #e07835;
            }

            .mini-collapsible-content {
                max-height: 0;
                overflow: hidden;
                transition: max-height 0.3s ease-out;
            }
            .mini-collapsible-inner {
                padding-bottom: 20px;
                color: #666;
                font-size: 14px;
                line-height: 1.6;
            }
        </style>

        <div class="mini-collapsibles">
            {% for block in section.blocks %}
                {% if block.type == 'collapsible_tab' %}
                    <div class="mini-collapsible-item">
                        <button class="mini-collapsible-btn" aria-expanded="false" onclick="toggleMiniCollapsible(this)">
                            <span class="mini-collapsible-title">{{ block.settings.heading }}</span>
                            <span class="mini-collapsible-icon">+</span>
                        </button>
                        <div class="mini-collapsible-content">
                            <div class="mini-collapsible-inner">
                                {{ block.settings.content }}
                                {{ block.settings.page.content }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <script>
            function toggleMiniCollapsible(btn) {
                const isExpanded = btn.getAttribute('aria-expanded') === 'true';
                btn.setAttribute('aria-expanded', !isExpanded);
                const content = btn.nextElementSibling;
                
                if (!isExpanded) {
                    content.style.maxHeight = content.scrollHeight + "px";
                } else {
                    content.style.maxHeight = null;
                }
            }
        </script>
      </div>
    </div>
</div>
