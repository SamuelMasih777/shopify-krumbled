{% comment %}
  Review Card Snippet
  Usage: {% render 'review-card', 
    customer_name: block.settings.customer_name,
    review_text: block.settings.review_text,
    product_name: block.settings.product_name,
    product_icon: block.settings.product_icon,
    background_color: block.settings.background_color
  %}
{% endcomment %}

<div class="review-card" style="background-color: {{ background_color | default: '#f5f5f5' }};">
  <div class="review-header">
    <h3 class="customer-name">{{ customer_name }}</h3>
  </div>
  
  <div class="review-content">
    <p class="review-text">{{ review_text }}</p>
  </div>
  
  <div class="review-footer">
    {% if product_icon %}
      <div class="product-icon">
        <img src="{{ product_icon | image_url: width: 40 }}" alt="{{ product_name }}">
      </div>
    {% endif %}
    <p class="product-name">{{ product_name }}</p>
  </div>
</div>

<style>
.review-card {
  padding: 30px;
  border-radius: 16px;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.review-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

.review-header {
  margin-bottom: 20px;
}

.customer-name {
  font-size: 18px;
  font-weight: 600;
  color: #111;
  margin: 0;
  font-family: sans-serif;
}

.review-content {
  flex: 1;
  margin-bottom: 25px;
}

.review-text {
  font-size: 14px;
  line-height: 1.7;
  color: #333;
  margin: 0;
}

.review-footer {
  display: flex;
  align-items: center;
  gap: 12px;
  padding-top: 20px;
  border-top: 1px solid rgba(0, 0, 0, 0.08);
}

.product-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  overflow: hidden;
  flex-shrink: 0;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.product-name {
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #666;
  margin: 0;
  font-weight: 600;
}

@media (max-width: 768px) {
  .review-card {
    padding: 25px;
  }
  
  .customer-name {
    font-size: 16px;
  }
  
  .review-text {
    font-size: 13px;
  }
}
</style>
